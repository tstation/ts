<% locals.setLayout('src/project/desktop/includes/layouts/base.ejs') -%>
<% locals.block('title', '타이어 쇼핑은 T\'Station.com') -%>

<%# Include %>
<div id="container" class="">
    <div id="contents">
        <div style="display: block; width: 100%; height: auto; vertical-align: middle; text-align: center; background-color: wheat;">
            <p style="padding: 200px 0;">Contents</p>
        </div>
    </div>
</div>
<div class="modal-item instance on">
    <!-- dim 디폴트는 dark. 'white'클래스 추가로 흰색처리 가능. -->
    <div class="dim"></div>

    <div class="middler">
        <!-- 모달 패널(이분분 통째로 디자인해야함). 사이즈 옵션 size-s / size-m(default) / size-l -->
        <div class="modal-pannel size-l">
            <!-- modal-header - modal-action - modal-body 순서변경 금지. modal-header / modal-action 생략은 가능. -->
            <!-- modal-header -->
            <div class="modal-header">
                <h3>개인정보 수집 및 이용</h3>
                <button type="button" class="btn-item btn-l btn-neutral round btn-inv min-w btn-popup-close">
                    <span class="line-icons close size-30"></span>
                </button>
            </div>

            <!-- modal-body -->
            <div class="modal-body">
                <div class="modal-scroller">
                    <!-- 콘텐츠 영역. 패딩설정 좌우: pd-h- / 상하: pd-h- 로 설정. pd-t- / pd-b- / pd-l- / pd-r- 로 각각 설정가능. -->
                    <div class="container">
                        <div class="full_agree">
                            <div class="layerC">
                                <form id="termsForm" name="termsForm">
                                    <div id="agreeSelect" style="padding:20px;">
                                        <!-- 40 - 개인정보수집및이용   -->
                                        <div class="agree_container">
                                            <div class="tbl">
                                                <table>
                                                    <tbody><tr>
                                                        <th>구분</th>
                                                        <th>목적</th>
                                                        <th>수집 항목</th>
                                                        <th>보유기간</th>
                                                    </tr>
                                                    <tr>
                                                        <td>회원 정보 수정 시</td>
                                                        <td>신상품 홍보 및 마케팅 목적 활용</td>
                                                        <td>차량 정보 (차종, 차량번호)</td>
                                                        <td>동의 철회 시까지</td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <!-- //40 - 개인정보수집및이용 -->
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>