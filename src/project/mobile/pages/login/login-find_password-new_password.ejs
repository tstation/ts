<div id="container" class="member">
    <!-- 비밀번호 찾기 -->
    <form id = "pwdChangeForm" method="POST">
        <div class="login_01">
            <ol class="login_form">
                <li>
                    <input type="password" name="passwd" id="passwd" maxlength="15" class="ip_txt01 w100p password01" placeholder="영문/숫자/특수문자 2개 이상 조합 6~15" />
