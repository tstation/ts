                localStorage.setItem('snbPos', JSON.stringify(pos))
                var storagePos = localStorage.getItem('snbPos');
                console.log(storagePos)
                

                setTimeout(function(){snbwrap.css({
                    "transform": "translate3d("+ (storagePos*-1) +"px, 0, 0)",
                    "transition-duration": "400ms"
                })}, 200);
            }

