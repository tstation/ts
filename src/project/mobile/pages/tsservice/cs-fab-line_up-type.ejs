            <script>
                $(document).ready(function() {
                    // tab event
                    var tireinfoTabWrap = $('.brand-carinfo-wrap');
                    var tireinfoTab = tireinfoTabWrap.find('.brand-carinfo-tabs');
                    var tireinfoContainer = $('.brand-carinfo-container');

                    tireinfoTab.find('li > a').each(function(i) {
                        tireinfoTab.find('li > a').eq(i).click(function () {
                            tireinfoContainer.hide();
                            tireinfoContainer.eq(i).show();
                            tireinfoTab.find('li > a').removeClass();
                            tireinfoTab.find('li > a').eq(i).addClass('active');
                        })
                    });
                });

                // hash check - is fire once on document ready
                var hash = window.location.hash.replace('#', '');
                var hashList = ['sedan', 'suv']
                var checkHash = function () {
                    if (!hash || hashList.indexOf(hash) === -1) return
                    $.each($('.brand-carinfo-tabs').find('li > a'), function (index, item) {
                        $(item).data().hash === hash ? $(item).addClass('active') : $(item).removeClass('active');
                    });
                    $.each($('.brand-carinfo-container'), function (index, item) {
                        $(item).css({ 'display': $(item).data().hash === hash ? 'block' : 'none' });
                    });
                };
                checkHash();
